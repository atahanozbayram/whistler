{
	"compilerOptions": {
		"paths": {
			"@config/*": ["./config/*"],
			"@root/*": ["./*"],
			"@src/*": ["./src/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@routes/*": ["src/routes/*"],
			"@tests/*": ["tests/*"],
			"@shared/*": ["src/shared/*"]
		},
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist/",
		"rootDir": "./",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": false,
		"checkJs": false,
		"sourceMap": true,
		"removeComments": false,
		"baseUrl": "./",
		"noImplicitAny": true,
		"lib": ["ES2021.String"]
	},
	"include": ["./src/**/*", "./tests/**/*", "./config/**/*"],
	"exclude": ["node_modules"]
}
